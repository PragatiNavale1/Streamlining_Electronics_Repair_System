<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         version="3.1">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.hrms.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.hrms.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddRequestServlet</servlet-name>
        <servlet-class>com.hrms.controller.AddRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddRequestServlet</servlet-name>
        <url-pattern>/addRequest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AssignTaskServlet</servlet-name>
        <servlet-class>com.hrms.controller.AssignTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AssignTaskServlet</servlet-name>
        <url-pattern>/assignTask</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewRequestsServlet</servlet-name>
        <servlet-class>com.hrms.controller.ViewRequestsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewRequestsServlet</servlet-name>
        <url-pattern>/view_requests</url-pattern>
    </servlet-mapping>
    
    <servlet>
    <servlet-name>RepairmanRequestsServlet</servlet-name>
    <servlet-class>com.hrms.controller.RepairmanRequestsServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>RepairmanRequestsServlet</servlet-name>
    <url-pattern>/repairman_requests</url-pattern>
</servlet-mapping>
   

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.hrms.controller.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

   <servlet>
    <servlet-name>PendingRepairmanRequestsServlet</servlet-name>
    <servlet-class>com.hrms.controller.PendingRepairmanRequestsServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>PendingRepairmanRequestsServlet</servlet-name>
    <url-pattern>/pending_repairman_requests</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>TakenRepairmanRequestsServlet</servlet-name>
    <servlet-class>com.hrms.controller.TakenRepairmanRequestsServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>TakenRepairmanRequestsServlet</servlet-name>
    <url-pattern>/taken_repairman_requests</url-pattern>
</servlet-mapping>
   

</web-app>
